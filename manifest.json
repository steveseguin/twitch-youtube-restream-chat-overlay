{
  "name": "Chat Overlay for Youtube, Twitch & more",
  "description": "Add live chat from Youtube, Twitch, Restream and more to your OBS as a browser overlay. Feature requests accepted!",
  "manifest_version": 3,
  "version": "2.0.0",
  "homepage_url": "https://chat.overlay.ninja/",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.sli.do/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://studio.youtube.com/*",
    "https://www.twitch.tv/*",
    "https://glimesh.tv/*",
    "https://chat.restream.io/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://trovo.live/chat/*",
    "https://www.twitter.com/*",
    "https://facebook.com/*",
    "https://*.zoom.us/*",
    "https://www.facebook.com/*",
    "https://www.mobcrush.com/*",
    "https://www.crowdcast.io/e/*",
    "https://www.polleverywhere.com/discourses/*",
    "https://viz.polleverywhere.com/discourses/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/youtube.js"],
		"matches": ["https://youtube.com/live_chat*", "https://www.youtube.com/live_chat*", "https://studio.youtube.com/live_chat*"]
	  },
	  {
		"css": ["main.css"],
		"js": ["sources/slido.js"],
		"matches": ["https://*.sli.do/*"]
	  },
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/twitch.js"],
		"matches": ["https://www.twitch.tv/popout/*"]
	  },
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/glimesh.js"],
		"matches": ["https://glimesh.tv/*/chat"]
	  },
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/restream.js"],
		"matches": ["https://chat.restream.io/*"]
	  },
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/trovo.js"],
		"matches": ["https://trovo.live/chat/*"]
		},
	  {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/instagram.js"],
		"matches": ["https://instagram.com/*","https://www.instagram.com/*"]
	  },
	  {
		"css": ["main.css"],
		"js": ["sources/instalive.js"],
		"matches": ["https://instagram.com/*/live/","https://www.instagram.com/*/live/"]
	  },
	   {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/twitter.js"],
		"matches": ["https://twitter.com/*","https://www.twitter.com/*"]
	  },
	   {
		"css": ["main.css"],
		"js": ["sources/facebook.js"],
		"matches": ["https://facebook.com/*","https://www.facebook.com/*"]
	  },
	   {
		"css": ["main.css"],
		"js": ["jquery.js", "sources/mobcrush.js"],
		"matches": ["https://www.mobcrush.com/*/chat.slobs"]
	  },
	   {
		"css": ["main.css"],
		"js": ["sources/crowdcast.js"],
		"matches": ["https://www.crowdcast.io/e/*"]
	  },
	   {
		"css": ["main.css"],
		"js": ["sources/zoom.js"],
		"matches": ["https://*.zoom.us/*"]
	  },
	   {
		"css": [],
		"js": ["sources/withyt.js"],
		"matches": ["https://*.withyoutube.com/*"]
	  },
	   {
		"css": ["main.css"],
		"js": ["sources/polleverywhere.js"],
		"matches": ["https://www.polleverywhere.com/discourses/*", "https://viz.polleverywhere.com/discourses/*"],
		"all_frames": true
	  }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "facebook.png",
        "glimesh.png",
        "polleverywhere.png",
        "sample_post_api.html",
        "trovo.png",
        "twitch.png",
        "unknown.png",
        "youtube.png",
        "zoom.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_ui": {
    "page": "settings/options.html"
  }
}
